// Print armstrong nos from 100 to 999

// ex - 371 = 3^3 + 7^3 + 1^3 = 27 + 343 + 1 = 371

#include <stdio.h>

int main(void)
{
    int num,n,sum=0,cube,d;
    printf("armstrong nos are : \n");
    for(num=100;num<=999;num++) //for loop to generate nos from 100 to 999
    {
        n=num;  //copy no in n for operation and keep num for comparison
        sum=0;
        while(n>0)
        {
           d = n % 10;  //take last digit
           cube = d*d*d;  //cube last digit
           sum = sum + cube;  //add cube of digit in sum
           n = n / 10;  //eliminate last digit
        }
        if(num==sum)  //check if no. is equal to sum of cube of individual digits
            printf("%d ",num);  //if yes print no
    }
    return 0;
}
