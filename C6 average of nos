// Find the sum and average of 10 positive nos

#include <stdio.h>

int main()
{
    int i=1,n,sum=0;
    float avg;
    printf("enter 10 positive nos \n");
    while(i<=10)
    {
        printf("enter no %d : ",i);
        scanf("%d",&n);
        if(n<0)
        {
            printf("enter only positive no \n");
            continue;
        }
        sum+=n;
        i++;
    }
    avg=sum/10.0;
    printf("sum = %d  avg = %f\n",sum,avg);
    return 0;
}
