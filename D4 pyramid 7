// 5
// 5 4
// 5 4 3
// 5 4 3 2
// 5 4 3 2 1

// (i=1,j=1)->5
// (i=2,j=1)->5   (i=2,j=2)->4
// (i=3,j=1)->5   (i=3,j=2)->4   (i=3,j=3)->3
// (i=4,j=1)->5   (i=4,j=2)->4   (i=4,j=3)->3   (i=4,j=4)->2
// (i=5,j=1)->5   (i=5,j=2)->4   (i=5,j=3)->3   (i=5,j=4)->2   (i=5,j=5)->1  ->in every line, i is constant, j is variable.
// if n=5 n-j=4          n-j=3          n-j=2          n-j=1          n-j=0  (use j in operations)
// add 1 n-j+1=5       n-j+1=4        n-j+1=3        n-j+1=2        n-j+1=1  (for every line)
#include <stdio.h>

int main()
{
    int i,j,n=5;
    for(i=1;i<=5;i++)
    {
        for(j=1;j<=i;j++)
        {
            printf("%d ",(n-j+1));
        }
        printf("\n");
    }
    return 0;
}
